
<div class="modal @ViewBag.ModalTipo fade" id="modal-danger" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">@ViewBag.ModalTitleHeader</h4>
            </div>
            <div class="modal-body">
                <h4>@ViewBag.Error</h4>
                <U>Detalle:</U>
                <cite>@ViewBag.ExceptionMsg</cite>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">Entiendo</button>
              @*  <button type="button" class="btn btn-outline">Save changes</button>*@
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>