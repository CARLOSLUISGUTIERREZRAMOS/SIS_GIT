
@{

    if (Session["IdUsuario"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
    // ESTABLECEMOS EL TITULO DEL CONTENIDO PRINCIPAL
    ViewBag.Title = "Lista de Agentes";
    // TEXTO ADICIONAL DEL TITULO (MENOR TAMAÑO)


    //Relación ubicacion (TEXTO - ? -ICONO)

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
new Crumb("Principal","","fa-home")
});
}

@model IEnumerable<SIA.Models.AgentesModel>
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Criterios de Busqueda</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="form-group">
                <label for="raz_social">Raz.Social</label>
                <input type="text" class="form-control" id="raz_social">
            </div>
            <div class="form-group">
                <label for="direccion">Dirección</label>
                <input type="text" class="form-control" id="direccion">
            </div>
            <div class="form-group">
                <label for="ruc">RUC</label>
                <input type="text" class="form-control" id="ruc">
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label for="cod_ras">Código RAS</label>
                <input type="text" class="form-control" id="cod_ras">
            </div>
            <div class="form-group">
                <label for="cod_gds">Código GDS</label>
                <input type="text" class="form-control" id="cod_gds">
            </div>
            <div class="form-group">
                <label for="code_int">INT Code</label>
                <input type="text" class="form-control" id="code_int">
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label for="estado">Estado</label>
                <input type="text" class="form-control" id="estado">
            </div>
            <div class="form-group">
                <label for="tagente">T.Agente</label>
                <input type="text" class="form-control" id="tagente">
            </div>
            <div class="form-group">
                <label for="tagencia">T.Agencia</label>
                <input type="text" class="form-control" id="tagencia">
            </div>
        </div>
        <div class="col-lg-3">

        </div>
    </div>
</div>
    <div class="box box-primary">
        <div class="box-body table-responsive">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoRes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoInt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RazonSocial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ruc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreTipoAgente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreTipoAgencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Localidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefono1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreAgenteMaster)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoRes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoInt)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.RazonSocial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ruc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreTipoAgente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreTipoAgencia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Localidad)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreAgenteMaster)
                        </td>


                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Codigo }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Codigo }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Codigo })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
